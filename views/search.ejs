<!DOCTYPE html>
<html lang="en">
  <%- include('layouts/header'); -%>

  <body>
    <%- include('layouts/navbar'); -%>

    <!-- Page Header -->
    <header class="masthead" style="background-image: url('img/books5.jpg')">
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="site-heading">
              <h1>Search posts</h1>
              <span class="subheading">Search posts based on book title or author</span>
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <form action="/search" method="POST">
            <div class="control-group">
              <div class="form-group floating-label-form-group controls">
                <label>Title or author name</label>
                <input
                  type="text"
                  class="form-control"
                  placeholder="Enter title or author name (full or part)"
                  id="title"
                  name="title"
                />
                <p class="help-block text-danger"></p>
              </div>
            </div>
            <br />
            <div class="form-group">
              <button
                type="submit"
                class="btn btn-primary"
                id="searchPostsButton"
              >
                Search
              </button>
            </div>
          </form>

          <% for (var i = 0; i < blogposts.length; i++) { %>
          <div class="post-preview">
            <a href="/post/<%= blogposts[i]._id %>">
              <h2 class="post-title">
                <%= blogposts[i].title %>
              </h2>
              <h4 class="post-subtitle">
                <%= blogposts[i].author %>
              </h4>
            </a>
            <p class="post-meta">
              Posted by
              <a href="#"><%= blogposts[i].username %></a>
              on <%= blogposts[i].datePosted.toDateString() %>
            </p>
          </div>
          <hr />
          <% } %>
          <!-- Pager -->
          <div class="clearfix">
            <a class="btn btn-primary float-right" href="#"
              >Older Posts &rarr;</a
            >
          </div>
        </div>
      </div>
    </div>

    <hr />

    <%- include('layouts/footer'); -%> <%- include('layouts/scripts'); -%>
  </body>
</html>
